{
	"name": "expensease-monorepo",
	"private": true,
	"packageManager": "bun@1.1.12",
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"build": "turbo run build",
		"clean": "rm -rf node_modules",
		"dev": "turbo run dev",
		"lint": "turbo run lint",
		"format": "prettier --write \"**/*.{ts,tsx,md}\""
	},
	"devDependencies": {
		"eslint": "^9.4.0",
		"prettier": "^3.3.1",
		"turbo": "^2.0.3"
	}
}
